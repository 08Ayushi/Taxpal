{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jasmine", "node"],

    /* keep aliases working inside specs */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/app/*": ["src/app/*"],
      "src/*": ["src/*"]
    }
  },

  /* âœ… only compile spec files + type decls */
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
